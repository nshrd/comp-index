# CBMA14 Index Environment Configuration
# Copy this file to .env and adjust values for your environment

# === API Keys ===
COINGLASS_API_KEY=your_coinglass_api_key_here
COINGLASS_BASE_URL=https://open-api-v4.coinglass.com

# === Server Configuration ===
UDF_HOST=0.0.0.0
UDF_PORT=8000
UDF_DEBUG=false
FLASK_ENV=production

# === Builder Configuration ===
BUILDER_UPDATE_INTERVAL=3600
BUILDER_MA_PERIOD=14

# === Data Paths (relative to project root) ===
DATA_INPUT_FILE=data/data.json
DATA_OUTPUT_FILE=data/CBMA14.json

# === Frontend Configuration ===
# For local development
FRONTEND_API_URL=http://localhost:8000
# For VPS deployment
# FRONTEND_API_URL=http://64.226.108.150:8000
# For GitHub Pages (with HTTPS)
# FRONTEND_API_URL=https://64.226.108.150:8443

# === Docker Configuration ===
COMPOSE_PROJECT_NAME=cbma14
DOCKER_RESTART_POLICY=unless-stopped

# === Nginx Configuration ===
NGINX_PORT=8080
NGINX_SSL_PORT=8443

# === Logging ===
LOG_LEVEL=INFO
LOG_DIR=logs 